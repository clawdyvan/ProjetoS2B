<Page
    x:Class="DengueApp.AtividadesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DengueApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="white">

    <Grid>

        <ListView x:ConnectionId='1' x:Name="lvAtividades"
                  IsItemClickEnabled="True"
                                                    >

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Margin" Value="0, 2, 0, 2" />
                    <Setter Property="Padding" Value="10, 3, 3, 3" />
                    <Setter Property="Background" Value="#EEE" />
                    <Setter Property="Foreground" Value="#333" />
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>

                    <Grid>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock FontSize="18" Text="{Binding Titulo}" />
                            
                            <StackPanel Name="spIformaçõesDatas" Orientation="Horizontal">
                                <TextBlock Margin="5,0,5,0" Name="tbDataUltimaConclusao" Text="{Binding DataUltimaConclusao, Mode=TwoWay}" />
                                <TextBlock Text="{Binding DiasRestantesMensagem, Mode=TwoWay}"></TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <CheckBox x:ConnectionId='2' IsChecked="{Binding AtividadeConcluida, Mode=TwoWay}" 
                                                                       
                                  HorizontalAlignment="Right"
                                  Background="Blue" Margin="0,0,-120,0"/>
                    </Grid>

                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>
        
    </Grid>
</Page>

